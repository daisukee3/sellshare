.container
  %ul
    - @tweet.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @tweet, local: true) do |f|
    %div
      = f.label :eyecatch, '画像'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :content, '内容'
    %div
      = f.rich_text_area :content
    = f.submit '保存', class: 'btn-first'
