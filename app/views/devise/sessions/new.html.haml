.container
  = render 'devise/shared/recruit_login'
  .session_title.text-center
    %h4【一般ユーザーの方はこちら】
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email, class: 'mt-2'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text', id: 'user_email'
    .field
      = f.label :password, class: 'text'
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'text', id: 'user_password'
    - if devise_mapping.rememberable?
      .field.mb-1
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "ログイン", class: 'btn-first mb-2'
  = render "devise/shared/links"