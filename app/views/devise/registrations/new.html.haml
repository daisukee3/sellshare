.container
  .signin_title.text-center.mt-2
    %h2 ユーザー登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :account, class: 'devise_label'
      %br/
      = f.text_field :account, autofocus: true, autocomplete: "account", class: 'text'
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (最低#{@minimum_password_length}文字必要です)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'text'
    .field.mb-1
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'text'
    .actions
      = f.submit "Sellshareを始める", class: 'btn-first  mb-2'
  = render "devise/shared/links"
