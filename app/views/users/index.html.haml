.container
  .lists
    %h2 ユーザーリスト
    %hr/
    - @users.each do |user|
      = link_to account_path(user.id) do
        .row.g-0
          .col-md-4.lists_avatar
            = image_tag user.avatar_image
          .col-md-8
            .card-body
              %h5.card-title 
                = user.account
                | #{link_to "削除", user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" }}
              %p.card-text 
                = user.introduction
      %hr/
= paginate @users



